doctype html
html
  head
    title Order Details
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
      }
      h1 {
        background-color: #007BFF;
        color: #fff;
        padding: 10px 0;
        text-align: center;
        margin-bottom: 20px;
      }
      table {
        border-collapse: collapse;
        width: 80%; /* Adjust the width as needed */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
      }
      th, td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #007BFF;
        color: #fff;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
      tr:hover {
        background-color: #ddd;
      }
      p {
        text-align: center;
      }
      a {
        text-decoration: none;
        background-color: #007BFF;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        text-align: center;
        display: block;
        width: 120px;
        margin: 20px auto;
        text-align: center;
      }
      a:hover {
        background-color: #0056b3;
      }
      
  body
    h1 Order Details

    if orderData && orderData.length > 0
      table
        thead
          tr
            th Order Date
            th Rent Span
            th Phone
            th Address

        tbody
          each order in orderData
            tr
              td= order.orderDate
              td= order.daysSelect
              td= order.phone
              td= order.address

    else
      p No order details available.

    a(href="/") Back to Home
